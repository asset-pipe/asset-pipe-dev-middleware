{
  "name": "@asset-pipe/dev-middleware",
  "version": "0.0.0-development",
  "author": {
    "name": "Trygve Lie",
    "email": "post@trygve-lie.com"
  },
  "description": "Asset pipe Express middleware",
  "main": "./lib/middleware.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/asset-pipe/asset-pipe-dev-middleware.git"
  },
  "keywords": [
    "test"
  ],
  "contributors": [
    {
      "name": "Trygve Lie",
      "email": "post@trygve-lie.com"
    }
  ],
  "bugs": {
    "url": "https://github.com/asset-pipe/asset-pipe-mid/issues"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@asset-pipe/css-writer": "^2.0.3",
    "@asset-pipe/js-writer": "^2.0.3",
    "dev-null": "^0.1.1",
    "emits": "^3.0.0",
    "express": "^4.16.4",
    "watchify": "^3.11.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^8.0.0",
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.0.0",
    "eslint-config-finn": "^3.0.1",
    "eslint-config-finn-prettier": "^3.0.2",
    "husky": "^4.0.9",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "semantic-release": "^15.13.1",
    "travis-deploy-once": "^5.0.0"
  },
  "scripts": {
    "lint": "eslint .",
    "test": "npm run lint",
    "lint:format": "eslint --fix .",
    "precommit": "lint-staged",
    "cm": "git-cz",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once"
  },
  "files": [
    "lib"
  ],
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 4,
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "tabWidth": 2
        }
      },
      {
        "files": ".eslintrc",
        "options": {
          "parser": "json",
          "tabWidth": 2
        }
      }
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix --config ./.eslintrc",
      "git add"
    ],
    "{*.json,*.md,.eslintrc}": [
      "prettier --write *.md *.json .eslintrc",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
