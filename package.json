{
  "name": "@asset-pipe/dev-middleware",
  "version": "0.0.0-development",
  "author": {
    "name": "Trygve Lie",
    "email": "post@trygve-lie.com"
  },
  "description": "Asset pipe Express middleware",
  "main": "./lib/middleware.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/asset-pipe/asset-pipe-dev-middleware.git"
  },
  "keywords": ["test"],
  "contributors": [
    {
      "name": "Trygve Lie",
      "email": "post@trygve-lie.com"
    }
  ],
  "bugs": {
    "url": "https://github.com/asset-pipe/asset-pipe-mid/issues"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "asset-pipe-css-writer": "^1.0.0",
    "asset-pipe-js-writer": "^1.0.0-beta.5",
    "dev-null": "^0.1.1",
    "emits": "^3.0.0",
    "express": "^4.16.2",
    "watchify": "^3.9.0"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^8.0.0",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.11.0",
    "eslint-config-finn": "^3.0.0",
    "eslint-config-finn-prettier": "^3.0.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^5.0.0",
    "prettier": "^1.8.2",
    "semantic-release": "^8.2.0"
  },
  "scripts": {
    "lint": "eslint .",
    "test": "jest --coverage",
    "lint:format": "eslint --fix .",
    "precommit": "lint-staged",
    "cm": "git-cz",
    "semantic-release":
      "semantic-release pre && npm publish && semantic-release post"
  },
  "files": ["lib"],
  "jest": {
    "testEnvironment": "node",
    "clearMocks": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 4,
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "tabWidth": 2
        }
      },
      {
        "files": ".eslintrc",
        "options": {
          "parser": "json",
          "tabWidth": 2
        }
      }
    ]
  },
  "lint-staged": {
    "*.js": ["eslint --fix --config ./.eslintrc", "git add"],
    "{*.json,*.md,.eslintrc}": [
      "prettier --write *.md *.json .eslintrc",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
